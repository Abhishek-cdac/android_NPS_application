<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:visibility="gone"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        <RelativeLayout
                android:id="@+id/back_layout"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:visibility="visible">

            <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back1" />
        </RelativeLayout>
        <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:text="Live Alarm"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/total_layout"
                android:layout_height="@dimen/_130sdp"
                android:layout_width="match_parent"
                android:background="@color/purple"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/toolbar">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:text="Total Alarm"/>

            <TextView
                    android:id="@+id/total_count"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:text="2260"/>
        </RelativeLayout>


    <LinearLayout
            android:id="@+id/layout1"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_below="@id/total_layout">

        <RelativeLayout

                android:layout_height="@dimen/_130sdp"
                android:layout_width="match_parent"
                android:background="@color/light_red"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/toolbar">

            <TextView
                    android:id="@+id/critical_alarm"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:text="Critical Alarm"/>

            <TextView
                    android:id="@+id/critical_alarm_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/critical_alarm"
                    android:text="410"/>
        </RelativeLayout>
        <RelativeLayout

                android:layout_height="@dimen/_130sdp"
                android:layout_width="match_parent"
                android:background="@color/light_green"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/toolbar">

            <TextView
                    android:id="@+id/major_alarm"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:text="Total Alarm"/>

            <TextView
                    android:id="@+id/major_alarm_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/major_alarm"
                    android:text="22222"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/layout1">

        <RelativeLayout

                android:layout_height="@dimen/_130sdp"
                android:layout_width="match_parent"
                android:background="@color/yellow"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/toolbar">

            <TextView
                    android:id="@+id/minar_alarm"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:text="Minar Alarm"/>

            <TextView
                    android:id="@+id/minar_alarm_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/minar_alarm"
                    android:text="410"/>
        </RelativeLayout>
        <RelativeLayout

                android:layout_height="@dimen/_130sdp"
                android:layout_width="match_parent"
                android:background="@color/orange"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:layout_below="@id/toolbar">

            <TextView
                    android:id="@+id/cleared_alarm"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_14sdp"
                    android:text="Cleared Alarm"/>

            <TextView
                    android:id="@+id/cleared_alarm_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/cleared_alarm"
                    android:text="410"/>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
